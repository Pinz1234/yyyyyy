      font-size: 1.1rem;
    }
    .section-title span {
      color: var(--secondary);
    }

    .packages-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 30px;
    }

    .package-card {
