      /* Palette IPIN MARKET: Ungu Neon & Cyan */
      --primary: #8b5cf6;
      --primary-gradient: linear-gradient(135deg, #8b5cf6 0%, #06b6d4 100%);
      --secondary: #22d3ee;
      --bg-dark: #020617;
      --bg-card: #0f172a;
      
      --glass: rgba(255, 255, 255, 0.03);
      --glass-border: rgba(255, 255, 255, 0.08);
      
      --text-main: #f8fafc;
      --text-muted: #94a3b8;
      
      --success: #10b981;
      --warning: #f59e0b;
      --error: #ef4444;
      
      --radius-sm: 12px;
      --radius-md: 20px;
      --radius-lg: 30px;
      
      --shadow-glow: 0 0 40px rgba(139, 92, 246, 0.2);
